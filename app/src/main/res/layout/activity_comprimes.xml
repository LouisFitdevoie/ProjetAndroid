<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ComprimesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_comprimes_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Connect"
            android:onClick="onComprimesClickManager"
            tools:ignore="OnClick"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_comprimes_read">
            <ProgressBar
                android:id="@+id/pb_comprimes_connexion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_below="@+id/bt_comprimes_read"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="25dp"
                android:max="255"
                android:progressTint="@color/primary"
                android:visibility="visible"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>