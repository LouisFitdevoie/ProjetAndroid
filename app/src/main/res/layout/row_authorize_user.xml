<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_row_userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User 1"
        android:textSize="25sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_row_emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse mail : "
        android:layout_below="@+id/tv_row_userId"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_row_rights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Droits d'administration : "
        android:layout_below="@+id/tv_row_emailAddress"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>