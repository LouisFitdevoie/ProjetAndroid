<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_choix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que voulez-vous faire ?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/bt_choix_comprimes"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_choix"
        android:layout_marginTop="25dp"
        android:text="Conditionnement de comprimés"
        android:onClick="onChoixAutomateClickManager"
        tools:ignore="onclick"
        />

    <Button
        android:id="@+id/bt_choix_niveau"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_choix_comprimes"
        android:layout_marginTop="10dp"
        android:text="Avertissement niveau de liquide"
        android:onClick="onChoixAutomateClickManager"
        tools:ignore="onclick"
        />

    <Button
        android:id="@+id/bt_choix_profil"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_choix_niveau"
        android:layout_marginTop="10dp"
        android:text="Modifier le mot de passe"
        android:onClick="onChoixAutomateClickManager"
        tools:ignore="onclick"
        />
    
    <Button
        android:id="@+id/bt_choix_autoriserEcriture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <Button
        android:id="@+id/bt_choix_deconnexion"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_choix_profil"
        android:layout_marginTop="10dp"
        android:text="Se déconnecter"
        android:textColor="@color/white"
        android:onClick="onChoixAutomateClickManager"
        tools:ignore="onclick"
        android:backgroundTint="#AA0000"
        />


</RelativeLayout>