<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.heh.fitdevoie.projetandroidstudio.MainActivity">

    <TextView
        android:id="@+id/tv_bienvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_main_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/tv_bienvenue"
        android:layout_marginTop="65dp"
        android:text="Pour accéder à cette application, vous devez être connecté.\nVeuillez donc vous connecter ou vous inscrire."
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_main_connexion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Se connecter"
        android:layout_below="@+id/tv_main_description"
        android:layout_marginTop="50dp"
        android:onClick="onMainClickManager"
        tools:ignore="onClick"/>

    <Button
        android:id="@+id/bt_main_inscription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="S'inscrire"
        android:layout_below="@+id/bt_main_connexion"
        android:layout_marginTop="10dp"
        android:onClick="onMainClickManager"
        tools:ignore="onClick"/>

</RelativeLayout>